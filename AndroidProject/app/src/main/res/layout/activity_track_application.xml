<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackApplication">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/trackApplication_backButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/ic_baseline_arrow_back_24" />

    <ImageView
        android:id="@+id/signIn_DocExpress"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_below="@+id/trackApplication_backButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="131dp" />

    <EditText
        android:id="@+id/trackApp_track"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/signIn_DocExpress"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/ic_boundary"
        android:drawableRight="@drawable/ic_baseline_search_24"
        android:hint="Tracking ID: 8XXXXX"
        android:inputType="number" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/trackApp_Button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_below="@+id/trackApp_track"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/ic_roung_blue"
        android:text="Track"
        android:textColor="@color/white" />

</RelativeLayout>